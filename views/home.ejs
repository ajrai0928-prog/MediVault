    <script>
        document.addEventListener('DOMContentLoaded', function () {
      const scroller = new LocomotiveScroll({
        el: document.querySelector("[data-scroll-container]"),
        smooth: true,
        tablet: { smooth: true },
        smartphone: { smooth: true }
      });

      // Add reveal class to elements when they come into view
      scroller.on("scroll", (instance) => {
        document.querySelectorAll(".reveal").forEach((el) => {
          const rect = el.getBoundingClientRect();
          const isVisible = rect.top <= window.innerHeight && rect.bottom >= 0;
          if (isVisible) {
            el.classList.add("is-inview");
          }
        });
      });

      // --- THEME SWITCHER SCRIPT ---
      const switcher = document.querySelector(".switcher");
      const trackPrevious = (el) => {
        const radios = el.querySelectorAll('input[type="radio"]');
        let previousValue = null;

        const initiallyChecked = el.querySelector(
          'input[type="radio"]:checked'
        );
        if (initiallyChecked) {
          previousValue = initiallyChecked.getAttribute("c-option");
          el.setAttribute("c-previous", previousValue);
        }

        radios.forEach((radio) => {
          radio.addEventListener("change", () => {
            if (radio.checked) {
              el.setAttribute("c-previous", previousValue ?? "");
              previousValue = radio.getAttribute("c-option");
            }
          });
        });
      };

      trackPrevious(switcher);
      
      // --- HAMBURGER MENU SCRIPT ---
        const hamburger = document.querySelector('.hamburger-menu');
        const mobileNav = document.querySelector('.mobile-nav');
        const menuOverlay = document.querySelector('.menu-overlay');
        const mainContainer = document.querySelector('[data-scroll-container]');

        function toggleMenu(isOpen) {
            const open = isOpen !== undefined ? isOpen : !hamburger.classList.contains('open');
            hamburger.classList.toggle('open', open);
            mobileNav.classList.toggle('open', open);
            menuOverlay.classList.toggle('open', open);
            
            if (open) {
                scroller.stop();
            } else {
                scroller.start();
            }
        }

        hamburger.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        menuOverlay.addEventListener('click', () => toggleMenu(false));
        
        document.querySelectorAll('.mobile-nav a').forEach(link => {
            link.addEventListener('click', () => toggleMenu(false));
        });


        // --- TYPEWRITER EFFECT SCRIPT ---
        const headlineElement = document.getElementById('typewriter-headline');
        const textToType = 'Unified Health Management on the <span>Blockchain</span>.';
        let charIndex = 0;

        function typeWriter() {
            if (charIndex < textToType.length) {
                if (textToType.substring(charIndex, charIndex + 6) === '<span>') {
                    const closingTagIndex = textToType.indexOf('</span>', charIndex) + 7;
                    headlineElement.innerHTML += textToType.substring(charIndex, closingTagIndex);
                    charIndex = closingTagIndex;
                } else {
                    headlineElement.innerHTML += textToType.charAt(charIndex);
                    charIndex++;
                }
                setTimeout(typeWriter, 90);
            } else {
                headlineElement.innerHTML += '<span class="blinking-cursor">|</span>';
            }
        }
        
        setTimeout(typeWriter, 500);

      // --- FIX FOR LOCOMOTIVE SCROLL ANCHOR LINKS ---
      const anchorLinks = document.querySelectorAll('a[href^="#"]');

      anchorLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const targetId = link.getAttribute("href");
          const targetElement = document.querySelector(targetId);

          if (targetElement) {
            scroller.scrollTo(targetElement);
          }
        });
      });

      // --- INTERACTIVE 3D HOVER EFFECT SCRIPT ---
      const securityImageContainer = document.querySelector(".security-image");
      const securityImage = securityImageContainer.querySelector("img");

      securityImageContainer.addEventListener("mousemove", (e) => {
        const rect = securityImageContainer.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const { width, height } = rect;
        const rotateX = (y / height - 0.5) * -25;
        const rotateY = (x / width - 0.5) * 25;
        securityImage.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.05)`;
      });

      securityImageContainer.addEventListener("mouseleave", () => {
        securityImage.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg) scale(1)`;
      });

      // Refresh Locomotive Scroll on window resize
      window.addEventListener('resize', () => {
          scroller.update();
      });
    });
    </script>
